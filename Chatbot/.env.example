# NexGenTeck AI Chatbot Environment Variables
# Copy this to .env and fill in your values

# Required: Groq API Key for Llama 3.3
GROQ_API_KEY=your_groq_api_key_here

# Website to scrape for knowledge base
WEBSITE_URL=https://nexgenteck.com

# CORS origins (comma-separated for multiple)
CORS_ORIGINS=*

# Model Configuration
# Use BAAI/bge-m3 for production (better quality)
# Use all-MiniLM-L6-v2 for faster local testing
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=llama-3.3-70b-versatile

# RAG Configuration
MAX_CONTEXT_DOCS=5
RELEVANCE_THRESHOLD=1.5

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Qdrant Configuration (in-memory by default)
# For production, use: QDRANT_URL=http://qdrant:6333
QDRANT_URL=:memory:
COLLECTION_NAME=nexgenteck_knowledge
